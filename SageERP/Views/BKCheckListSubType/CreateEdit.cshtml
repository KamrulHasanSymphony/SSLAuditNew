@model Shampan.Models.BKCheckListSubType

@{
	ViewData["Title"] = "Index";	
}
@Html.Partial("_Header", new HeaderModel()
{
	HeaderName = "BK-CheckList SubTypes Item Entry",
	BreadCrums = new Dictionary<string, string>()
{
	{"/BKCheckListSubType","Index"},
    {"","Index"},
}})

<link href="~/css/button.css" rel="stylesheet" />


<div class="container-fluid">

	<form id="frm_BKCheckListSubType">
		<div class="card card-secondary">

			<div class="card-header">
				<h3 class="card-title">Create Check ListItem</h3>
			</div>


			<div class="card-body">

				@Html.HiddenFor(model => model.Id)
				@Html.HiddenFor(model => model.Operation)
				@Html.HiddenFor(model => model.Edit)

				<div class="form-group row">


					<div class="col-sm-2">
						@Html.LabelFor(model => model.Code)
						@Html.TextBoxFor(Model =>Model.Code , new { @class = "  form-control form-control-sm",@readonly="readonly" })
						@Html.ValidationMessageFor(model => model.Code)

					</div>


					<div class="col-sm-2">

						@Html.LabelFor(model => model.BkCheckListTypesId)
						@Html.DropDownListFor(model => model.BkCheckListTypesId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control form-control-sm", @data_selected = Model.BkCheckListTypesId })
						@Html.ValidationMessageFor(model => model.BkCheckListTypesId)

                    </div>

					<div class="col-sm-3">
						@Html.LabelFor(model => model.Description)
						@Html.TextAreaFor(Model => Model.Description, new { @class = "  form-control form-control-sm" })
						@Html.ValidationMessageFor(model => model.Description)

					</div>

					<div class="col-sm-2">
						<div class="form-check">
							<label class="form-check-label">
								@Html.LabelFor(model => model.Status, new { @class = "form-check-label", style = "margin-top: 30px;font-weight: bold;" })
								@Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input", style = "margin-left: 35px;    margin-top: 34px; transform: scale(1.9);", id = "Status" })
							</label>
						</div>
					</div>

				</div>


			</div>
		</div>
	</form>

	<div class="card">
		<div class="card-header p-2">

			@if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
			{
				<button type="button" class="button btnsave sslUpdate">Update</button>			
			}
			else
			{
				<button class="button btnsave sslSave" type="button" id="">Save</button>		
			}

		</div>
	</div>
		
	

</div>

@section scripts{

	<script src="/js/app/Services/CommonService.js"></script>
	<script src="/js/app/Services/BKCheckListSubTypeService.js"></script>
	<script src="/js/app/Controllers/BKCheckListSubTypeController.js"></script>


	<script>
		$(document).ready(function () {
			BKCheckListSubTypeController.init();	
		});

	</script>


}
