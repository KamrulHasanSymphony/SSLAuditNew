@model Shampan.Models.AuditPoint

<style>


</style>

<div class="modal-dialog draggable modal-lg" role="document" style="max-width:70%;">
    <div class="modal-content" style="width:100%;">

        <div class="modal-header">
            <h4 class="modal-title">Audit Points</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <div class="modal-body">

            <form id="frm_AuditPoint">


                @* <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Create Audit Point</h3>
                    </div>
                    <div class="card-body"> *@


                @Html.HiddenFor(model => model.Id)
                @*@Html.HiddenFor(model => model.PIdData) *@
                @Html.HiddenFor(model => model.Operation)
                @Html.HiddenFor(model => model.Edit)
                @Html.HiddenFor(model => model.AuditTypeId)

                <div class="form-group row">

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.AuditType)
                        @Html.TextBoxFor(Model => Model.AuditType, new { @class = "  form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.AuditType)
                    </div>
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.PIdData)
                        @Html.DropDownListFor(model => model.PIdData, Enumerable.Empty<SelectListItem>(), new { @class = "form-control form-control-sm", @data_selected = Model.PIdData })
                        @Html.ValidationMessageFor(model => model.PIdData)
                    </div>
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.WeightPersent)
                        @Html.TextBoxFor(Model => Model.WeightPersent, new { @class = "  form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.WeightPersent)
                    </div>

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.P_LevelData)
                        @Html.TextBoxFor(Model => Model.P_LevelData, new { @class = "  form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.P_LevelData)
                    </div>

                </div>

                @* </div>
                </div> *@

            </form>


            @if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
            {
                <button type="button" class="button sslUpdate  pt-1 btnSaveAuditPoint">Update &nbsp;</button>

            }
            else
            {
                <button type="button" class="button sslSave  pt-1 btnSaveAuditPoint">Save &nbsp;</button>

            }


        </div>

        <div class="modal-footer">

            <button type="button" class="button sslClose" data-dismiss="modal">
                <i class="fas fa-times-circle"></i> Close
            </button>

        </div>

    </div>
</div>