@model Shampan.Models.AuditPoint

@{
    ViewData["Title"] = "Index";
}
@Html.Partial("_Header", new HeaderModel()
{
    HeaderName = "Audit Point Entry",
    BreadCrums = new Dictionary<string, string>()
{
    {"/AuditPoints","Index"},
    {"","Index"},
}
})

<link href="~/css/button.css" rel="stylesheet" />


<div class="container-fluid">

    <form id="frm_AuditPoint">
        <div class="card card-secondary">

            <div class="card-header">
                <h3 class="card-title">Create Audit Point</h3>
            </div>


            <div class="card-body">

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PIdData)
                @Html.HiddenFor(model => model.Operation)
                @Html.HiddenFor(model => model.Edit)
                @Html.HiddenFor(model => model.AuditTypeId)
              

                <div class="form-group row">



                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.AuditType)
                        @Html.TextBoxFor(Model => Model.AuditType, new { @class = "  form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.AuditType)
                    </div>

                  
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.PId)             
                        @Html.DropDownListFor(model => model.PId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control form-control-sm", @data_selected = Model.PId })
                        @Html.ValidationMessageFor(model => model.PId)
                    </div>


                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.WeightPersent)
                        @Html.TextBoxFor(Model => Model.WeightPersent, new { @class = "  form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.WeightPersent)
                    </div>

                   @*  <div class="col-sm-2">
                        @Html.LabelFor(model => model.P_Mark)
                        @Html.DropDownListFor(model => model.P_Mark, Enumerable.Empty<SelectListItem>(), new { @class = "form-control form-control-sm", @data_selected = Model.P_Mark })
                        @Html.ValidationMessageFor(model => model.P_Mark)
                    </div> *@

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.P_Level)
                        @Html.TextBoxFor(Model => Model.P_Level, new { @class = "  form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.P_Level)
                    </div>

                </div>

                <div class="form-group row">
                </div>


            </div>
        </div>
    </form>

    <div class="card">
        <div class="card-header p-2">

            @if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
            {
                <button type="button" class="button btnsave sslUpdate">Update</button>
            }
            else
            {
                <button class="button btnsave sslSave" type="button" id="">Save</button>
            }

        </div>
    </div>



</div>






@section scripts {

    <script src="/js/app/Services/CommonService.js"></script>
    <script src="/js/app/Services/AuditPointsService.js"></script>
    <script src="/js/app/Controllers/AuditPointsController.js"></script>


    <script>
        $(document).ready(function () {
            AuditPointsController.init();
        });

    </script>


}
